<%- model_class = Text -%>
<div class="page-header">
  <h1>Texts</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Text</th>
      <th>Unit</th>
      <th>Author</th>
      <th>Lessons</th>
      <th>Lexiles</th>
      <th>Sequence</th>
      <th>Genre</th>
      <th>Performance</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @texts.each do |text| %>
      <tr>
        <td><%= link_to text.name, text_path(text) %></td>
        <td><%= text.unit.letter %></td>
        <td><%= text.author %></td>
        <td><%= text.lessons %></td>
        <td><%= text.lexiles %></td>
        <td><%= text.sequence %></td>
        <td><%= text.genre %></td>
        <td><%= text.performance %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_text_path(text), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      text_path(text),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_text_path,
            :class => 'btn btn-primary' %>

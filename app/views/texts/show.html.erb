<%- model_class = Text -%>
<%
   unit_name = @unit.letter + ' - ' + @unit.name
%>
<div class="page-header">
  <h1><%= @text.name %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Name:</strong></dt>
  <dd><%= @text.name %></dd>
  <dt><strong>Unit:</strong></dt>
  <dd><%= unit_name %></dd>
  <dt><strong>Author:</strong></dt>
  <dd><%= @text.author %></dd>
  <dt><strong>Lessons:</strong></dt>
  <dd><%= @text.lessons %></dd>
  <dt><strong>Lexiles:</strong></dt>
  <dd><%= @text.lexiles %></dd>
  <dt><strong>Sequence:</strong></dt>
  <dd><%= @text.sequence %></dd>
  <dt><strong>Genre:</strong></dt>
  <dd><%= @text.genre %></dd>
  <dt><strong>Performance:</strong></dt>
  <dd><%= @text.performance %></dd>
</dl>

<div class="form-actions">
  <%= link_to 'Back to ' + unit_name,
              @text.unit, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_text_path(@text), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              text_path(@text),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

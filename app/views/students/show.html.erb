<%- model_class = Student -%>
<div class="page-header">
  <h1>Student summary</h1>
</div>

<dl class="dl-horizontal">

  <dt><strong>Name:</strong></dt>
  <dd><%= "#{@student.first_name} #{@student.last_name}" %></dd>

  <dt><strong><%= model_class.human_attribute_name(:username) %>:</strong></dt>
  <dd><%= @student.username %></dd>

  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @student.email %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              students_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_student_path(@student), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              student_path(@student),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

<h3><%= @student.first_name %>'s session plans</h3>

<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:name) %></th>
    <th>Composite score</th>
  </tr>
  </thead>
  <tbody>
  <% @sessions.each do |session| %>
      <tr>
        <td><%= link_to session.name, [@student, session] %></td>
        <td></td>
      </tr>
  <% end %>
  </tbody>
</table>
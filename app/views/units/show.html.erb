<%- model_class = Unit -%>
<div class="page-header">
  <h1>Unit <%= @unit.letter %> - <%= @unit.name %></h1>
</div>
    <div id="canvas_container">
        <div>
            <canvas id="island" src="<%= session_path(@session, :format => 'json') %>" unit="<%= @unit.id %>"></canvas>
        </div>
    </div>

    <div class="form-actions">

      <button id="draw_unit" class="btn btn-success">Render Island</button>

        <%= link_to 'Add text',
                    new_unit_text_path(@unit),
                    :class => 'btn btn-primary' %>

        <%= link_to 'Back to ' + @session.name,
                    @session, :class => 'btn'  %>
        <%= link_to 'Edit Unit',
                    edit_unit_path(@unit), :class => 'btn' %>
        <%= link_to 'Delete Unit',
                    unit_path(@unit),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-danger' %>

    </div>

<h3>Texts</h3>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Text</th>
    <th>Unit</th>
    <th>Author</th>
    <th>Lessons</th>
    <th>Lexiles</th>
    <th>Sequence</th>
    <th>Genre</th>
    <th>Performance</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
    <%= render @unit.texts %>
  </tbody>
</table>



<%= form_for @unit, :html => { :class => 'form-horizontal' } do |f| %>
    <div class="control-group">
      <%= f.label :session_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.select :session_id, @sessions.collect {|s| [ s.name + ' - ' + s.start.year.to_s, s.id ] } %>
      </div>
    </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :letter, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :letter, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                units_path, :class => 'btn' %>
  </div>
<% end %>

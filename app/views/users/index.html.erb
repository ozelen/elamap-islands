<div class="page-header">
  <h1>Users</h1>
</div>

<table class="table table-striped">
  <tr>
    <th>Login</th>
    <th>Name</th>
    <th>Email</th>
    <th>Action</th>
  </tr>
  <% for user in @users %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.first_name %> <%= user.last_name %></td>
      <td><%= user.email %></td>
      <td>
        <%= link_to "Edit", edit_user_path(user), :class => 'btn btn-mini' %>
        <%= link_to "Delete",
                    user_path(user),
                    :class => 'btn btn-mini btn-danger',
                    :method => :delete,
                    :data => { :confirm => 'Are you sure?' }
        %>
      </td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New User", new_user_path, :class => 'btn btn-primary' %></p>

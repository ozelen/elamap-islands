<%= form_for @teacher, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">

      <%= f.fields_for :user do |uf| %>

          <%= uf.label :username %>
          <%= uf.text_field :username %>

          <%= uf.label :first_name %>
          <%= uf.text_field :first_name %>

          <%= uf.label :last_name %>
          <%= uf.text_field :last_name %>

          <%= uf.label :email %>
          <%= uf.text_field :email %>

      <% end %>

    </div>
  </div>
  <div class="control-group">
    <%= f.label :school_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :school_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                teachers_path, :class => 'btn' %>
  </div>
<% end %>

<%= form_for @score, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :value, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :value, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :text_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :text_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :student_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :student_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :teacher_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :teacher_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                scores_path, :class => 'btn' %>
  </div>
<% end %>
